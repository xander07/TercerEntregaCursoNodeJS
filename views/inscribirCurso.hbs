{{>header}}

<h2>Inscribirse en un curso</h2>

<main class="main">
    <form action="/crearCurso" method="POST">
        <div class="form-row col-md-12">
            <div class="form-group col-md-6">
                <label for="selectCurso">Seleccione el nombre del curso</label>                
                <select class="form-control" id="selectCurso" name="name">
                    {{{listarC}}}
                </select>
            </div>
        </div>
        <div class="form-row col-md-12"></div>
            <div class="form-group col-md-6">
                <label for="inputNombreCurso">Documento del Aspitante</label>
                <input type="number" class="form-control" name="doc" id="inputNombreCurso" placeholder="Ingrese N° de identificación" required>
            </div>        
            <div class="form-group col-md-6">
                <label for="inputDescripción">Nombre del Aspirante</label>
                <input type="text" class="form-control" name="nombre" id="inputAddress" placeholder="Ingrese nombre completo" required>
            </div>
        </div>
        <div class="form-row col-md-12">
            <div class="form-group col-md-2">
                <label for="inputPrecio">Correo Electrónico</label>
                <input type="email" class="form-control" name="email" id="inputPrecio" placeholder="Ingrese Correo Electrónico" required>
            </div>
            <div class="form-group col-md-2">
                <label for="inputIntensidad">Teléfono</label>
                <input type="number" class="form-control" id="inputIntensidad" name="telefono" placeholder="Ingrese N° Telefónico" required>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Inscribir</button>
    </form>
</main>

{{>footer}}